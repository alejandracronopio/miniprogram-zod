{
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "jsxBracketSameLine": false,
    "printWidth": 100,
    "singleAttributePerLine": true,
    "proseWrap": "preserve",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 200
        }
      },
      {
        "files": "*.wxml",
        "options": { "parser": "html" }
      }
    ]
  }